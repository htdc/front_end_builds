<PaperCard as |card|>
  <card.content>
    <PaperDataTable local-class="public-key-table" as |table|>
      <table.head as |head|>
        <head.column>
          Name
        </head.column>
        <head.column>
          Fingerprint
        </head.column>
        <head.column>
          Last Used
        </head.column>
        <head.column />
      </table.head>
      <table.body as |body|>
        {{#each @publicKeys as |pk|}}
          <body.row as |row|>
            <row.cell>
              {{pk.name}}
            </row.cell>
            <row.cell>
              {{pk.fingerprint}}
            </row.cell>
            <row.cell>
              {{format-date pk.lastUsedAt}}
            </row.cell>
            <row.cell>
              <DeleteButton @target={{pk}} />
            </row.cell>
          </body.row>
        {{/each}}
      </table.body>
    </PaperDataTable>
  </card.content>
</PaperCard>